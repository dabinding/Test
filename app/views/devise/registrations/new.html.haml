= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  .login-container
    .panel.panel-body.login-form
      .text-center
        .icon-object.border-slate-300.text-slate-300
          %i.icon-reading
        %h5.content-group
          Sign up for an account
          %small.display-block Enter account information

      = devise_error_messages!

      .field.mb-20
        = f.label :email
        %br
        = f.email_field :email, autofocus: true, :class => 'form-control', :placeholder => 'some@email.com'
      .field.mb-20
        = f.label :password
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
        %br
        = f.password_field :password, autofocus: true, :class => 'form-control', :placeholder => 'Password', autocomplete: 'off'
      .field.mb-20
        = f.label :password_confirmation
        %br
        = f.password_field :password_confirmation, autofocus: true, :class => 'form-control', :placeholder => 'Password', autocomplete: 'off'
      .actions
        = f.submit "Sign up", :class => 'button btn btn-primary btn-block'
        = render "devise/shared/links"